<% flash.each do |type, msg| %>
    <div>
      <%= msg %><br>
    </div>
  <% end %>

<%= form_with(model: @post) do |f| %>
    <%= f.label("Image Url:") %><br>
    <%= f.text_field(:image_url) %><br>
    <%= f.label("Title:") %><br>
    <%= f.text_field(:title) %><br>
    <%= f.label("Description:") %><br>
    <%= f.text_area(:content) %><br><br>
    <%= f.label("Tags:") %><br>
    <%= f.collection_check_boxes(:category_ids, Category.order(:name), :id, :name, prompt: true) %><br>
    <%= f.submit %>
<% end %>