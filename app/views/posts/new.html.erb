<%= form_with(model: @post) do |f| %>
    <%= f.label("Image Url:") %><br>
    <%= f.text_field(:image_url) %><br>
    <%= f.label("Title:") %><br>
    <%= f.text_field(:title) %><br>
    <%= f.label("Description:") %><br>
    <%= f.text_field(:content) %><br>
    <%= f.label("Category:") %><br>
    <%= f.collection_select(:category_id, Category.order(:name), :id, :name, prompt: true) %><br>
    <%= f.submit %>
<% end %>