<h3>Posted by: <%= @post.user.name.capitalize %><br><br></h3>

<%= like_helper(@post) %><br>
   

<% if logged_in? %><br>
   <%= button_to "Comment", comment_path(@post), method: "put" %>
<% end %>

Title:<br><br>
<%= @post.title %><br><br>
Description:<br>
<p><%= @post.content %></p><br>

Date Posted:<br>
<%= date_posted(@post.created_at) %><br><br>

Tags:
<% @post.post_categories.each do |post| %>
   <%= post.category.name+' '%>
<% end %><br><br>

<%= post_delete_helper(@post) %>

