<%= stylesheet_link_tag "application" %>

<div>
  <h1>Sign Up</h1>

  <%= render 'errors' %>
  
    <%= form_with(model: @user) do |f| %>
      <%= f.label("Name:") %><br>
      <%= f.text_field :name %><br>
      <%= f.label("Email:") %><br>
      <%= f.text_field :email %><br>
      <%= f.label("Username:") %><br>
      <%= f.text_field :username %><br>
      <%= f.label("Password:") %><br>
      <%= f.password_field :password %><br>
      <%= f.submit "Submit" %>
    <% end %> 
    
</div> 

  








